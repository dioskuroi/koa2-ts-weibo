{
  "name": "koa-ts-base-template",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Simple",
  "description": "koa ts template",
  "main": "app.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon -e ts --exec ts-node -r tsconfig-paths/register bin/www",
    "prod": "cross-env NODE_ENV=production node -r tsconfig-paths/register pm2 start pm2.conf.json",
    "test": "cross-env NODE_ENV=test jest --runInBand --forceExit --colors",
    "build": "npm run rm-dist && npm run build-ts && npm run copy-static",
    "build-ts": "tsc -b ./  --verbose",
    "copy-static": "ts-node copyStatic.ts",
    "rm-dist": "ts-node rm-dist.ts",
    "apidoc": "apidoc -i ./src/app/routes -o ./src/app/apidoc/dist -c ./src/app/apidoc",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "prepush": "npm run lint"
  },
  "keywords": [
    "koa",
    "ts"
  ],
  "dependencies": {
    "ajv": "^6.11.0",
    "date-fns": "^2.9.0",
    "ejs": "^3.0.1",
    "formidable-upload-koa": "^1.0.1",
    "fs-extra": "^8.1.0",
    "koa": "^2.8.1",
    "koa-body": "^4.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-favicon": "^2.0.1",
    "koa-generic-session": "^2.0.4",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-onerror": "^4.1.0",
    "koa-redis": "^4.0.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-static-server": "^1.4.0",
    "koa-views": "^6.2.1",
    "mysql2": "^2.1.0",
    "pug": "^2.0.4",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.3",
    "sequelize-typescript": "^1.1.0",
    "tsconfig-paths": "^3.9.0",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/bluebird": "^3.5.29",
    "@types/ejs": "^3.0.0",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.19",
    "@types/koa": "2.0.50",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compose": "3.2.4",
    "@types/koa-generic-session": "^1.0.3",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-redis": "^4.0.0",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/koa-views": "^2.0.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.25",
    "@types/redis": "^2.8.14",
    "@types/sequelize": "^4.28.8",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "apidoc": "^0.17.7",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^2.7.0",
    "jest": "24.1.0",
    "nodemon": "^1.19.3",
    "shelljs": "^0.8.3",
    "should": "^13.2.3",
    "supertest": "^4.0.2",
    "ts-jest": "24.0.0",
    "ts-node": "~7.0.0",
    "typescript": "^3.7.5"
  }
}
